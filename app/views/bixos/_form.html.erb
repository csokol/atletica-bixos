<p>Modalidades:</p>
<br/>
<table>
  <tr>
    <%
      i=0
      cels=5
    %>
    <% Modalidade.find(:all).each do |modalidade| %>
      <% if modalidade.sexo == 0 or modalidade.sexo == 1 %>
          <%= "<td width=20px align='right' >"%>
          <%= check_box_tag 'bixo[modalidade_ids][]', modalidade.id, @bixo.modalidades.include?(modalidade) %>
          <%= "<td width=120px align='left' >" %>
          <%= modalidade.nome  %>
        </td>
        </td>
        <% i += 1 %>
      <% end %>
      <% if i == cels %>
      <%   i=0  %>
        </tr>
        <tr>
      <%end%>
    <% end %>
  </tr>

</table>
